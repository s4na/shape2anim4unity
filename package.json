{
  "name": "shape2anim",
  "version": "1.0.0",
  "description": "A web-based tool to convert shape data to Unity animation files",
  "type": "module",
  "scripts": {
    "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js",
    "test:watch": "node --experimental-vm-modules node_modules/jest/bin/jest.js --watch",
    "test:coverage": "node --experimental-vm-modules node_modules/jest/bin/jest.js --coverage",
    "test:e2e": "playwright test",
    "test:e2e:headed": "playwright test --headed",
    "test:e2e:ui": "playwright test --ui",
    "test:e2e:chromium": "playwright test --project=chromium",
    "test:e2e:firefox": "playwright test --project=firefox",
    "test:e2e:webkit": "playwright test --project=webkit",
    "test:all": "npm run test && npm run test:e2e"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/s4na/unity-animation-editor.git"
  },
  "homepage": "https://s4na.github.io/unity-animation-editor/",
  "bugs": {
    "url": "https://github.com/s4na/unity-animation-editor/issues"
  },
  "keywords": [
    "unity",
    "animation",
    "editor",
    "yaml",
    "anim"
  ],
  "author": "s4na",
  "license": "MIT",
  "engines": {
    "node": ">=24.0.0"
  },
  "devDependencies": {
    "@jest/globals": "^29.7.0",
    "@playwright/test": "^1.56.1",
    "http-server": "^14.1.1",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0"
  }
}
